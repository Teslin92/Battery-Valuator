  "basel_convention": {
    "description": "Multilateral treaty controlling transboundary movements of hazardous wastes",
    "pic_required": true,
    "annexes": {
      "annex_i": {
        "description": "Categories of wastes to be controlled",
        "Y23": {
          "description": "Batteries, including lithium batteries",
          "hazard_code": "H4.1 (flammable), H6.1 (toxic)"
        }
      },
      "annex_iii": {
        "description": "Hazard characteristics",
        "H4.1": {
          "description": "Flammable solids",
          "applies_to": "Lithium metal batteries"
        },
        "H6.1": {
          "description": "Toxic",
          "applies_to": "Batteries containing hazardous constituents"
        }
      },
      "annex_viii": {
        "description": "List A - Wastes characterized as hazardous",
        "A1160": {
          "description": "Waste lead-acid batteries, whole or crushed",
          "control": "Strict PIC procedure"
        },
        "A1170": {
          "description": "Unsorted waste batteries excluding A1160. Waste batteries containing constituents of Annex I to extent that they exhibit characteristics of Annex III",
          "applies_to": "Waste lithium-ion batteries, black mass if hazardous",
          "control": "PIC procedure required",
          "processing": "Must be recycled or disposed in environmentally sound manner"
        },
        "A1180": {
          "description": "Waste electrical and electronic assemblies or scrap containing components such as accumulators and other batteries",
          "control": "PIC procedure if contains hazardous batteries"
        }
      },
      "annex_ix": {
        "description": "List B - Wastes not covered by Article 1(1)(a) (non-hazardous)",
        "B1010": {
          "description": "Metal and metal-alloy wastes in metallic, non-dispersible form",
          "applies_to": "Processed battery metals (copper, aluminum, steel casings)"
        },
        "B1090": {
          "description": "Batteries, other than those specified in list A, not containing lithium, mercury, lead or cadmium",
          "note": "Most lithium batteries do NOT qualify for B1090"
        },
        "B1110": {
          "description": "Electrical and electronic assemblies (e-waste) not containing Annex I components",
          "applies_to": "Battery packs with non-hazardous batteries only"
        }
      }
    },
    "technical_guidelines": {
      "status": "Under development for waste batteries other than lead-acid",
      "expected": "COP-18 (2027)",
      "current": "Draft technical guidelines being reviewed"
    },
