  "us_rcra": {
    "framework": "Resource Conservation and Recovery Act",
    "competent_authority": "EPA",
    "lithium_batteries": {
      "classification": {
        "hazardous_waste": true,
        "waste_codes": ["D001", "D003"],
        "D001": "Ignitable - contains flammable electrolytes",
        "D003": "Reactive - risk of thermal runaway, fire, explosion"
      },
      "universal_waste": {
        "eligible": true,
        "regulation": "40 CFR Part 273",
        "benefits": "Streamlined requirements for collection, transport, storage",
        "restrictions": [
          "Cannot breach or open cell casings",
          "Cannot shred batteries (destination facility only)",
          "Must send to permitted recycler or disposal facility"
        ],
        "handlers": {
          "small_quantity": {
            "threshold": "Less than 5,000 kg on-site",
            "requirements": "Basic labeling, storage, shipment tracking"
          },
          "large_quantity": {
            "threshold": "5,000 kg or more on-site",
            "requirements": "Enhanced tracking, employee training, emergency procedures"
          }
        }
      },
      "black_mass": {
        "universal_waste": false,
        "description": "Filter cake-like material from shredded batteries (anode + cathode materials)",
        "classification": "Hazardous waste if exhibits D001/D003 characteristics",
        "storage": "Requires RCRA Part B permit before recycling",
        "processing": "Shredding is part of exempt recycling process per 261.6(c)(1)"
      },
      "ddr_batteries": {
        "description": "Damaged, Defective, or Recalled batteries",
        "transport": {
          "air": "Prohibited",
          "ground": "49 CFR 173.185(f) packaging requirements apply"
        },
        "universal_waste": "Allowed if cell casings intact, separate storage recommended"
      },
      "export": {
        "regulation": "40 CFR 262.83",
        "notification": {
          "system": "WIETS (Waste Import Export Tracking System)",
          "advance": "60 days before first shipment",
          "validity": "Up to 1 year (3 years for OECD pre-consented facilities)"
        },
        "aoc": {
          "description": "Acknowledgment of Consent from EPA",
          "required_from": ["Country of import", "Countries of transit"],
          "processing_time": "30-90 days typical"
        },
        "aes_filing": {
          "description": "Automated Export System filing",
          "regulation": "15 CFR 30.4(b)",
          "required_info": [
            "EPA license code",
            "EPA consent number",
            "RCRA manifest tracking number",
            "Commodity classification code",
            "Quantity in kg or liters"
          ]
        },
        "manifest": {
          "required": true,
          "form": "EPA Form 8700-22",
          "submission": "Within 30 days to e-Manifest system"
        },
        "annual_report": {
          "due_date": "March 1",
          "covers": "Previous calendar year exports",
          "contents": "Types, quantities, destinations, consent numbers"
        }
      }
